      displayReceipt();
      return 0;
    }
    // Going into Menus
    else if(userInput == 1)
    {
      displayFoods();
      cin >> userInput;
    }
    else if(userInput ==2)
    {
      displayDrinks();
      cin >> userInput;
    }

  }while(userInput != 0);
  return 0;
}

